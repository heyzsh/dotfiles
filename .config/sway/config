#---------#
# GLOBALS #
#---------#
# Keys
set $mod      Mod4
set $left     h
set $down     j
set $up       k
set $right    l
set $br       bracketright
set $bl       bracketleft
# Programs
set $term     foot
set $menu     /usr/bin/bemenu-run | xargs swaymsg exec --
# Wallpapers
set $primary_bg "$HOME/.local/backgrounds/primary.jpg"  
set $right_bg   "$HOME/.local/backgrounds/right.jpg"  

#----------#
# BEHAVIOR #
#----------#
# Multiple Screens
# Primary
output HDMI-A-1 {
  pos         0 277
  res         1920x1080
  bg          $primary_bg fill #282828
}
# Right
output DP-1 {
  transform   270
  pos         1920 0
  res         1080x1920
  bg          $right_bg   fill #282828
}
# Laptop
output eDP-1 {
  bg          $primary_bg fill #282828
}
# Workspaces Desktop
workspace 1 output HDMI-A-1
workspace 2 output HDMI-A-1
workspace 3 output HDMI-A-1
workspace 4 output HDMI-A-1
workspace 5 output DP-1
workspace 6 output DP-1
workspace 7 output DP-1
workspace 8 output DP-1
# Mouse
mouse_warping none
focus_follows_mouse always
# Fullscreen
popup_during_fullscreen ignore
# Workspace Behavior
workspace_auto_back_and_forth no
workspace_layout default
# Containers
tiling_drag false
default_orientation horizontal
# Inputs
# Laptop
input "2:14:SynPS/2_Synaptics_TouchPad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}

#---------#
# VISUALS #
#---------#
# Borders
default_border            pixel 3
default_floating_border   pixel 3
smart_borders             off
# Gaps
gaps inner  8          
smart_gaps  off
# Font
font Adobe Source Code SemiBold 10
# Color Scheme
#client.focused             #FFFFFF #FFFFFF #FFFFFF #FFFFFF #FFFFFF
#client.focused_inactive    #FFFFFF #FFFFFF #FFFFFF #FFFFFF #FFFFFF
#client.placeholder         #FFFFFF #FFFFFF #FFFFFF #FFFFFF #FFFFFF
#client.unfocused           #FFFFFF #FFFFFF #FFFFFF #FFFFFF #FFFFFF
#client.urgent              #FFFFFF #FFFFFF #FFFFFF #FFFFFF #FFFFFF
# Resize Mode
mode "resize" {
  bindsym $left   resize shrink   width   10px
  bindsym $down   resize grow     height  10px
  bindsym $up     resize shrink   height  10px
  bindsym $right  resize grow     width   10px
  bindsym Return  mode "default"
  bindsym Escape  mode "default"
}

#---------#
# SWAYBAR #
#---------#
bar {
  position top
  status_command while date +'%Y-%m-%d %l:%M:%S %p'; do sleep 1; done
  colors {
    statusline          #ffffff
    background          #323232
    inactive_workspace  #32323200 #32323200 #5c5c5c
  }
}

#----------#
# BINDINGS #
#----------#
# Scratchpad
bindsym $mod+backslash      scratchpad show
bindsym $mod+BackSpace      move container to scratchpad
# Containers
# Focus
bindsym $mod+$left    focus left
bindsym $mod+$down    focus down
bindsym $mod+$up      focus up
bindsym $mod+$right   focus right
# Movement
bindsym $mod+Shift+$left    move left
bindsym $mod+Shift+$right   move right
bindsym $mod+Shift+$down    move down
bindsym $mod+Shift+$up      move up
bindsym $mod+Shift+c        move position center
bindsym $mod+Shift+1        move container to workspace 1
bindsym $mod+Shift+2        move container to workspace 2
bindsym $mod+Shift+3        move container to workspace 3
bindsym $mod+Shift+4        move container to workspace 4
bindsym $mod+Shift+5        move container to workspace 5
bindsym Mod1+Shift+1        move container to workspace 5
bindsym Mod1+Shift+2        move container to workspace 6
bindsym Mod1+Shift+3        move container to workspace 7
bindsym Mod1+Shift+4        move container to workspace 8
bindsym $mod+Shift+period   move container to output right
bindsym $mod+Shift+comma    move container to output left
bindsym $mod+Shift+$br      move container to workspace next
bindsym $mod+Shift+$bl      move container to workspace prev
bindsym $mod+Ctrl+Shift+period    move workspace to output right
bindsym $mod+Ctrl+Shift+comma     move workspace to output left
# Layouts
bindsym $mod+Shift+y        layout default
bindsym $mod+Shift+u        layout splith
bindsym $mod+Shift+i        layout splitv
bindsym $mod+Shift+o        layout stacking
bindsym $mod+Shift+p        layout tabbed
bindsym $mod+Ctrl+period    layout toggle split
bindsym $mod+Ctrl+comma     layout toggle all
bindsym $mod+Ctrl+$right    split vertical
bindsym $mod+Ctrl+$down     split horizontal
bindsym $mod+Shift+t        resize set width 720 height 480
# Gaps
bindsym $mod+equal          gaps inner current  plus   2
bindsym $mod+minus          gaps inner current  minus  2
bindsym $mod+Shift+equal    gaps inner all      plus   2 
bindsym $mod+Shift+minus    gaps inner all      minus  2
bindsym $mod+0              gaps inner current  set    8
bindsym $mod+Shift+0        gaps inner all      set    8 
# Fullscreen
bindsym $mod+f              fullscreen
# Workspaces
bindsym $mod+1              workspace number 1
bindsym $mod+2              workspace number 2
bindsym $mod+3              workspace number 3
bindsym $mod+4              workspace number 4
bindsym $mod+5              workspace number 5
bindsym Mod1+1              workspace number 5
bindsym Mod1+2              workspace number 6
bindsym Mod1+3              workspace number 7
bindsym Mod1+4              workspace number 8
# Outputs
bindsym $mod+comma          focus output right
bindsym $mod+period         focus output left
# Modes
bindsym $mod+s              sticky toggle
bindsym $mod+r              mode "resize"
bindsym $mod+space          focus mode_toggle
floating_modifier $mod      normal
bindsym $mod+shift+space    floating toggle
# Programs
bindsym $mod+Return         exec $term
bindsym $mod+w              kill
bindsym $mod+p              exec $menu
# Sway
bindsym $mod+Shift+r        reload
bindsym $mod+Shift+q        exec swaynag -t warning -m 'Exit Sway?' -b 'Yes' 'swaymsg exit'

#----------#
# INCLUDES #
#----------#
include @sysconfdir@/sway/config.d/*
