{
  // Editor
  "editor.cursorBlinking": "solid",
  "editor.folding": true,
  "editor.fontFamily": "monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "500",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.roundedSelection": false,
  "editor.scrollBeyondLastLine": true,
  "editor.suggestSelection": "first",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.tabSize": 2,
  // Explorer
  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,
  // Window
  "window.title": "${folderName}/${activeEditorShort}",
  "window.menuBarVisibility": "toggle",
  // Workbench
  "workbench.colorTheme": "Gruvbox Dark Medium",
  "workbench.editor.enablePreview": false,
  "workbench.commandPalette.history": 1024,
  "workbench.editor.showTabs": true,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "workbench.enableExperiments": false,
  "workbench.list.smoothScrolling": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.list.keyboardNavigation": "simple",
  // Files
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/bower_components": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/bower_components/**": true,
    "**/dist/**": true
  },
  // Git
  "git.ignoreMissingGitWarning": true,
  "diffEditor.ignoreTrimWhitespace": true,
  // Misc
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  "breadcrumbs.enabled": true,
  // Extensions
  "extensions.autoUpdate": true,
  // Prettier
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "prettier.jsxBracketSameLine": true,
  "prettier.jsxSingleQuote": true,
  // Vim
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.statusBarColors.insert": "#3C3836",
  "vim.statusBarColors.normal": "#282828",
  // Vim Bindings
  "vim.handleKeys": {
    "<C-n>": true
  },
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-i>"],
      "after": ["=", ">", " "]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["leader", "cr"],
      "commands": [":nohl"]
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<C-b>"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["leader", "c"],
      "commands": ["workbench.action.closeActiveEditor"]
    }
  ],
  "json.maxItemsComputed": 32768,
  "explorer.confirmDelete": false,
  "workbench.activityBar.visible": false,
  "security.workspace.trust.untrustedFiles": "open",
  "window.zoomLevel": 1,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
