# Reload functions
super + Escape
	"$XDG_CONFIG_HOME"/sxhkd/functions

#########
# bspwm #
#########

# navigate nodes
super + {h,j,k,l}
  bspc node -f {west,south,north,east}.local

# focus master node
super + space
    bspc node --focus biggest.local

# make node master
super + shift + space
  bspc node -s biggest.local

# closing or killing nodes
super + w
  bspc node -c

super + shift + w
  bspc node -k

# arrange nodes
super + shift + {h,j,k,l}
  bspc node -s {west,south,north,east}.local

# desktop selection
super + {1-8}
  bspc desktop -f {1-8}.local

# move node to desktop
super + shift + {1-8}
  bspc node --to-desktop {1-8}.local

# cycle through monitors
super + {period,comma}
  bspc monitor -f {next,prev}

# move to monitor
super + shift + {comma,period}
    bspc node -m {next,prev}

# full-screen
super + f
  bspc desktop --layout next

# reload config
super + F2
  . $HOME/.config/bspwm/bspwmrc

########
# rofi #
########

super + p
	rofi -i -show run

#############
# alacritty #
#############

super + Return
	alacritty
