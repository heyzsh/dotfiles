#!/bin/sh

sudo pacman --needed --noconfirm -S tor torsocks

while true; do
  read -p "Do you wish to enable the TOR service? " yn
  case $yn in
    [Yy]* ) sudo systemctl enable tor; sudo systemctl start tor; break;;
    [Ss]* ) sudo systemctl start tor; break;;
    [Nn]* ) exit;;
  * ) echo "Please answer y/n..";;
 esac
done
